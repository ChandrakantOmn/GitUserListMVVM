<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="item"
                type="com.foo.assignment.data.model.BooksResponse.Item" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:theme="@style/AppTheme.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:fitsSystemWindows="true"
                    app:collapsedTitleTextAppearance="?android:attr/textAppearanceMedium"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleGravity="bottom|left"
                    app:expandedTitleTextAppearance="?android:attr/textAppearanceLarge"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:title="@{item.volumeInfo.title}"
                    app:toolbarId="@+id/toolbar">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_profile_pic"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        app:avatarUrl="@{item.volumeInfo.ImageLinks.thumbnail}"
                        app:layout_collapseMode="parallax"
                        tools:srcCompat="@mipmap/ic_launcher" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:background="@drawable/bg_text_overlay_270"
                        android:fitsSystemWindows="true"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:navigationIcon="@drawable/ic_back_arrow"
                        app:popupTheme="@style/AppTheme.PopupOverlay" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                    android:id="@+id/container_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="8dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="8dp">

                        <TextView
                                android:id="@+id/tv_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{String.format(@string/string_subtitle, item.volumeInfo.subtitle)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_subtitle" />

                        <TextView
                                android:id="@+id/tv_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{String.format(@string/string_author, item.volumeInfo.authors)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                        <TextView
                                android:id="@+id/tv_publisher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{String.format(@string/string_publisher, item.volumeInfo.publisher)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                        <TextView
                                android:id="@+id/tv_published-date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{String.format(@string/string_published_date, item.volumeInfo.publishedDate)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:text="@{String.format(@string/string_desc, item.volumeInfo.description)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{String.format(@string/string_category, item.volumeInfo.categories)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="8dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="8dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{String.format(@string/string_country, item.saleInfo.country)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_subtitle" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{String.format(@string/string_saleability, item.saleInfo.saleability)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:text="@{String.format(@string/string_list_price, item.saleInfo.listPrice)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:text="@{String.format(@string/string_retail_price, item.saleInfo.retailPrice)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:text="@{String.format(@string/string_buy_link, item.saleInfo.buyLink)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="16dp"
                                android:ellipsize="end"
                                android:text="@{String.format(@string/string_offers, item.saleInfo.offers)}"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                tools:text="@string/string_author" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>